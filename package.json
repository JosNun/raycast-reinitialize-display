{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "display-reinitializer",
  "title": "Display Reinitializer",
  "description": "Force re-detection and reinitialization of connected displays with multiple methods (DDC, refresh rate, resolution cycle)",
  "icon": "monitor.png",
  "author": "JosNun",
  "license": "MIT",
  "categories": [
    "System"
  ],
  "keywords": [
    "display",
    "monitor",
    "screen",
    "resolution",
    "ddc",
    "refresh",
    "reinitialize",
    "external",
    "detect"
  ],
  "commands": [
    {
      "name": "reinitialize-displays",
      "title": "Reinitialize Displays",
      "description": "View and reinitialize connected displays",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.83.2",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "20.8.10",
    "@types/react": "18.0.9",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prebuild": "npm run compile-swift",
    "compile-swift": "swiftc -o assets/display-helper scripts/DisplayHelper.swift -framework CoreGraphics -framework IOKit -framework Foundation"
  }
}
