{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "display-reinitializer",
  "title": "Display Reinitializer",
  "description": "Force re-detection and reinitialization of connected displays with multiple methods (DDC, refresh rate, resolution cycle)",
  "icon": "monitor.png",
  "author": "JosNun",
  "license": "MIT",
  "categories": [
    "System"
  ],
  "keywords": [
    "display",
    "monitor",
    "screen",
    "resolution",
    "ddc",
    "refresh",
    "reinitialize",
    "external",
    "detect"
  ],
  "commands": [
    {
      "name": "reinitialize-displays",
      "title": "Reinitialize Displays",
      "description": "View and reinitialize connected displays",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.5",
    "@raycast/utils": "^2.2.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "^20.8.10",
    "@types/react": "^19.2.2",
    "eslint": "^8.57.1",
    "prettier": "^3.2.5",
    "react": "^19.2.0",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
